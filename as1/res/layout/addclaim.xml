<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/From"
        android:layout_centerVertical="true"
        android:text="To"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/fromdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/placename"
        android:layout_below="@+id/From"
        android:layout_toRightOf="@+id/To"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/todate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fromdate"
        android:layout_alignRight="@+id/fromdate"
        android:layout_below="@+id/To"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/To"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text"
        android:ems="10" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="41dp"
        android:text="Place"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Date"
        android:layout_below="@+id/todate"
        android:layout_marginTop="19dp"
        android:text="Description"
        android:textSize="20sp" />

    <Button
        android:id="@+id/claimadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/claimcancel"
        android:layout_alignBottom="@+id/claimcancel"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/claimcancel"
        android:onClick="claimadd"
        android:text="Confirm" />

    <EditText
        android:id="@+id/placename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/placename"
        android:layout_below="@+id/Date"
        android:layout_marginTop="21dp"
        android:text="From"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/place"
        android:layout_below="@+id/placename"
        android:layout_marginTop="29dp"
        android:text="Date"
        android:textSize="20sp" />

    <Button
        android:id="@+id/claimcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text=" Cancel " />

</RelativeLayout>
